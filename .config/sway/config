# Movidas de grim y slurp
bindsym Print exec grim  ~/Im치genes/grim/"$(date +'%d-%m-%Y-%H-%M-%S').png" &&  grim - | wl-copy
bindsym $mod+Shift+S exec slurp | grim -g - - | tee ~/Im치genes/grim/"$(date +'%d-%m-%Y-%H-%M-%S').png" | wl-copy
bindsym Shift+Print exec swaymsg -t get_tree | jq -r '.. | select(.focused?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | grim -g - ~/Im치genes/grim/"$(date +'%d-%m-%Y-%H-%M-%S').png"

### Idle configuration
#
# Example configuration:
#
bindsym Ctrl+mod1+l exec swaylock -f -c 282828
exec swayidle -w \
         timeout 300 'swaylock -f -c 282828' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 282828'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

